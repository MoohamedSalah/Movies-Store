<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style=padding-top:1px>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-brand">

                    @Html.ActionLink("MoviesMOO", "MoviesClient", "Movies", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li>@Html.ActionLink("Custmers", "Index", "Customers", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Movies", "Index", "Movies", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Rental", "Index", "Rentals", null, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">


        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
